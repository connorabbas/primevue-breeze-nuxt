// https://aka.ms/devcontainer.json
{
	"name": "PrimeVue Breeze Nuxt",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "primevue_breeze_nuxt",
	"workspaceFolder": "/web",
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"mikestead.dotenv",
				"streetsidesoftware.code-spell-checker",
				"hollowtree.vue-snippets",
				"Vue.volar",
                "yzhang.markdown-all-in-one"
			],
			"settings": {
                "terminal.integrated.shell.linux": "/bin/sh"
            }
		}
	},
    "postCreateCommand": "chown -R 1000:1000 /web && npm install",
    "remoteUser": "node"
	// "forwardPorts": [],
	// "runServices": [],
	// "shutdownAction": "none",
}
